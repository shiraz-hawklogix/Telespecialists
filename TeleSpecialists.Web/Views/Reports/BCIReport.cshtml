
@{
    ViewBag.Title = "BCI Report";
}

@Html.Partial("_ReportLayout")


<div class="form-row align-items-center" id="divLocalFilters" style="padding-bottom:20px!important">

    <div style="display:none!important">
        <span>Facility</span>
        <div class="col-auto  col-4">
            @Html.DropDownList("Facilities", ViewBag.Facilities as List<SelectListItem>, new { @class = "form-control cas_fac_key", @multiple = "multiple" })
        </div>
    </div>
    <span>Physician</span>
    <div class="col-auto  col-4">
        @Html.DropDownList("Physicians", ViewBag.Physicians as List<SelectListItem>, new { @class = "form-control", @multiple = "multiple" })
    </div>
    <div class="col-auto">
        <button type="button" class="btn btn-dark" id="btnSearch">Search</button>
        <button type="button" class="btn btn-dark" id="btnClear" style="display: none">Clear Search</button>
        <input type='button' class='btn btn-dark hopitalid' onclick="showgraph();" value="View BCI Graph" />
    </div>
</div>

<div class="modal" id="graphmodal" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog modal-lg" style="max-width: 1350px;width: 1350px;">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="export-pdf k-button">Save as PDF</button>
            </div>
            <div class="modal-body">
                <div id="chart"></div>
            </div>
            <div class="modal-footer">
                <a class="btn btn-link" data-dismiss="modal">Close</a>
            </div>
        </div>
    </div>
</div>
<script src="~/Scripts/Custom/inputMask.js"></script>
<script>
    $(document).ready(function () {
        loadDate();
        var listFacilities = [];
        var listPhysicians = [];
        var filters = [];
        $('#divLocalFilters').appendTo('#divFilters');
        document.title = $("#title-prefix").val() + '@ViewBag.Title';
        $('#Facilities').multiselect({
            columns: 1,
            placeholder: 'Select Facility',
            selectAll: true,
            search: true,
            searchOptions: {
                'default': 'Search Facility'
            }
        });
        $('#Physicians').multiselect({
            columns: 1,
            placeholder: 'Select Physician',
            selectAll: true,
            search: true,
            searchOptions: {
                'default': 'Search Physician'
            }
        });
        $('#btnClear').click(function () {
            $('#btnClear').css('display', 'none');
            $("#kendoDataGrid").data("kendoGrid").dataSource.filter({});
            $("#Facilities").val("");
            $("#Facilities").multiselect('reload');
            $("#Physicians").val("");
            $("#Physicians").multiselect('reload');
        });
        $('#btnSearch').click(function () {
            $('#btnClear').css('display', '');
            loadDate();
        });
        var presentDate = new Date();
        $('.datemonthpicker').kendoDatePicker({
            max: presentDate,
            start: "year",
            depth: "year",
            format: "MMMM yyyy",
            open: function (e) {
                onDatePickerOpen(e);
            }
        });

    });

    function loadDate() {
        ShowLoading();
        showAllColumns();
        $("#kendoDataGrid").kendoGrid({
            excel: {
                allPages: true,
                filterable: false,
                fileName: '@ViewBag.Title' + '.xlsx',
                proxyURL: '@Url.Action("ExportToExcel")',
            },
            dataSource: {
                transport: {
                    read: {
                        url: '@Url.Action("GetBCI")',
                        contentType: "application/json",
                        type: "POST",
                        data: function () {
                            var filterModel = { facilities: "", Physicians: "" };

                            var Getphysician = $("#Facilities").val();
                            if (Getphysician == "") {
                                $('#Facilities option:not(:selected)').each(function (key, value) {
                                    Getphysician.push(value.value);
                                });
                            }
                            filterModel.facilities = Getphysician;

                            var Getphysicians = $("#Physicians").val();
                            if (Getphysicians == "") {
                                $('#Physicians option:not(:selected)').each(function (key, value) {
                                    Getphysicians.push(value.value);
                                });
                            }
                            filterModel.Physicians = Getphysicians;
                            return filterModel;
                        }
                    },
                    parameterMap: function (options) {
                        options = KendoKeepState("Report", options);
                        exportPostData = options;
                        return kendo.stringify(options);
                    }
                },
                schema: {
                    data: "Data",
                    total: "Total",
                    errors: function (response) {
                        if (response != null && response.success != undefined && response.success != null && !response.success) {
                            $("#mainContentArea").find("#validationSummary").empty().showBSDangerAlert("", "Error! Please try again.");
                            HideLoading();
                        }
                    }
                },
                serverPaging: true,
                pageSize: 10,
                serverFiltering: false,
                serverSorting: true,
            },
            width: '100%',
            groupable: false,
            filterable: false,
            sortable: true,
            resizable: false,
            pageable: {
                refresh: true,
                pageSizes: [5, 10, 15, 20, 30, 50, 'All']
            },
            dataBound: function (e) {

                $("#kendoDataGrid .k-auto-scrollable").scrollLeft(0);
                $('[data-role="dropdownlist"]').each(function () {
                    var kendoDropDown = $(this).data("kendoDropDownList");
                    if (kendoDropDown)
                        kendoDropDown.bind("open", onDropdDownOpen);
                });
                filterColumns();
                HideLoading();
            },
            columns: [
                {
                    field: "Phy_Name", width: 180, title: "Physician Name"
                },
                {
                    field: "Phy_Bci_Value", width: 200, title: "Base Credential Index", format: "{0:n2}"
                },
            ]
        });
    }

    function showAllColumns() {

        var grid = $("#kendoDataGrid").data("kendoGrid");
        if (grid != null && grid != 'undefined') {
            var cols = grid.columns.length
            for (var i = 2; i < cols; i++) {
                grid.showColumn(i)
            }
        }
    }
    function filterColumns() {
        var grid = $("#kendoDataGrid").data("kendoGrid");
        if (grid == null || grid == 'undefined')
            return;
        showAllColumns();
        for (var i = 0; i < grid._data.length; i++) {
            $.each(grid._data[i], function (key, val) {
                if (val != null) {
                    grid.showColumn(key);
                }
                else {
                    grid.hideColumn(key);
                }
            })
        }
        $(".k-grid-header-wrap > table").css("width", "100%");
        $(".k-grid-content > table").css("width", "100%");

    }
</script>
<script>
    function showgraph() {

        $.ajax({
            cache: false,
            async: true,
            type: "POST",
            url: '/Reports/GetBCIGraphModal',
            //data: { model: model },
            success: function (data) {
                var title;
                var mean;
                var median;
                var meancal = [];
                var mediancal = [];
                var mindate;
                var catgory;
                $.each(data, function (key, value) {
                    debugger
                    $.each(value, function (id, dat) {
                        if (id == "Title") {
                            title = dat;
                        }
                        else if (id == "Mean") {
                            mean = dat;
                        }
                        else if (id == "Median") {
                            median = dat;
                        }
                        else if (id == "MinDate") {
                            mindate = dat;
                        }
                        else if (id == "MeanCalculation") {
                            $.each(dat, function (keys, vals) {
                                meancal.push(vals);
                            })
                        }
                        else if (id == "MedianCalculation") {
                            $.each(dat, function (keys, vals) {
                                mediancal.push(new Date(mindate + " " + vals).getTime());
                            })
                        }
                        else if (id == "Category") {
                            catgory = dat;
                        }
                    });
                });
                createChart(title, mean, median, meancal, mediancal, mindate, catgory);
                $(document).bind("kendo:skinChange", createChart);
                $("#graphmodal").modal('show');
            },
            error: function () {

            }

        });
    }
  
    function createChart(title, mean, median, meancal = [], mediancal = [], mindate, catgory = []) {
        debugger
        $("#chart").kendoChart({
            title: {
                text: title,
                color: "black"
            },
            legend: {
                position: "bottom"
            },
            chartArea: {
                background: "",
                width: 1300
            },
            seriesDefaults: {
                type: "column",
                //labels: {
                //    visible: true,
                //    template: "#= value #",
                //    format: "{0}",
                //    margin: 20
                //}
            },
           // series: meancal,
            series: [{
                //labels: {
                //    template: "#= value #",
                //    visible: true,
                //    format: "{0}",
                //},
                name: mean,
                data: meancal,
                color: "purple"

            }
            ],

            valueAxis: {
                labels: {
                    format: "{0}"
                },
                line: {
                    visible: false
                },
                axisCrossingValue: 0
            },
            categoryAxis: {
                categories: catgory, 
                line: {
                    visible: false
                },
                majorGridLines: {
                    visible: false
                },
                labels: {
                    rotation: "auto"
                }
            },
            pannable: {
                lock: "y"
            },
            zoomable: {
                mousewheel: {
                    lock: "y"
                },
                selection: {
                    lock: "y"
                }
            },
            tooltip: {
                visible: true,
                format: "{0}",
                template: "#= value #"
            }
        });
    }
    $(".export-pdf").click(function () {
        $("#chart").getKendoChart().saveAsPDF();
    })
</script>
