@using TeleSpecialists.BLL.Extensions;
@using TeleSpecialists.BLL.Helpers;

@model TeleSpecialists.Models.CredentialIndexViewModel

<div class="ajaxForm">
    @using (Html.BeginForm("_UserCredentialIndex", "Admin",FormMethod.Post, new { data_target= "userCredentialIndex" }))
    {
        
        //HiddenFields 
        @Html.HiddenFor(m=> m.UserId)
        <div class="row">
            <div class="col-lg-4 col-md-6 col-sm-11 offset-sm-1">
                <h2>Credential Index</h2>
                <hr />
            </div>
        </div>

        <div class="row">
            <div class="col-sm-10 offset-sm-1">
                <div class="form-group row">
                    <label class="control-label col-sm-1">@Html.LabelForWithSuffix(m => m.CredentialIndex, null) </label>
                    <div class="col-lg-4 col-md-6 col-sm-11">
                        @Html.EditorFor(x => x.CredentialIndex, new { htmlAttributes = new { @class = "form-control", @placeholder = "CI", @maxlength = 6 } })
                        @Html.ValidationMessageFor(model => model.CredentialIndex, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group row text-right">
                    <label class="control-label col-sm-1"></label>
                    <div class="col-lg-4 col-md-6 col-sm-11">
                        <a class="btn btn-link loadLinkAsync" href="@Url.Action("Users", "Admin")">Cancel</a>
                        <input type="submit" value="Save" class="btn btn-dark" autocomplete="off">
                    </div>
                </div>
            </div>
        </div>
    }
</div>
